{
  "manifest_version": 3,
  "name": "YT Chords & Key Helper",
  "version": "1.0.0",
  "description": "Detect key, chords, and provide guitar-friendly tools while listening to YouTube songs.",
  "permissions": ["scripting", "tabs"],
  "host_permissions": ["https://www.youtube.com/*"],

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": [
        "libs/meyda.min.js",
        "libs/tonal.min.js",
        "content.js"
      ],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["overlay.css"],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}
